{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": ["(^|/)app\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": [
      "cluster/prod/.+\\.ya?ml$"
    ],
    "ignorePaths": [
      ".*app\\.ya?ml$",
      ".*\\.enc\\.ya?ml$"
    ]
  },
  "enabledManagers": [
    "argocd",
    "helm-values",
    "kubernetes"
  ]
}
